{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./build",
      "sourceMap": true,
      "rootDir": ".",
      "strict": true,
      "moduleResolution": "node"
    },
    "include": [
      "src/**/*",
      "__tests__/**/*",
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
    }